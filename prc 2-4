
#include <iostream>
#include <cmath>

using namespace std;
int main(int argc, char const *argv[])
{
	double a{4.6}, x{-0.7}, y, t;

	if (a <= x)
		y = a + log(x + a);
	else
		y = sqrt(sin(a * x));
	if (a > y)
		t = y / (a-x);
	else if (a == y)
		t = y / (a-x) + (a+x) / (y * y);
	else
  
		t = tan(a * x) + cos(2 * a * y);
    
	cout << "a = " << a << "\nx = " << x << "\ny = " << y << "\nt = " << t << endl;
	system("pause");
return 0;
  }
